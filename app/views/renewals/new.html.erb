<%= render '/flash_msg2'%>
<%= link_to "管理者ページ", admin_path %>
<p>suitellの更新情報を記入してください</p>

<%= form_for @renewal do |f| %>
<div>
  <%= f.label :更新情報 %>
  <%= f.text_field :update_info %>
</div>
<div>
  <%= f.submit "更新", data: { disable_with: '送信中...' } %>
</div>
<% end %>
<br>
<br>
<hr>
<div>
<%= link_to "更新情報一覧", renewals_path %>

<h2>更新情報</h2>
<% @renewals.reverse_each do |renewal| %>
<p>
<%= renewal.updated_at.strftime("%m/%d") %>
<%= renewal.update_info %> 
<%= link_to "[削除]", renewal_delete_path(renewal.id), method: :delete, data: { confirm: "削除します" } %></p>
<% end %>
</div>
