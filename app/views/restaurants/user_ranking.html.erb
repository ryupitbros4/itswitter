  <div class="jumbotron">
    <h2>ランキング</h2>
  </div>
  

<center><h3> トップ30 </h3></center>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-1">順位</th>
      <th class="col-md-5">ユーザー名</th>
      <th class="col-md-6">ポイント</th>
    </tr>
  </thead>
  <tbody>
    <!--もし同率ポイントだった場合は順位をタイにする-->
    <% @up_rank.each do |urank| %>
    <tr>
      <th scope="row" class="col-md-1"><h4><%= urank.rank %>位</h4></th>
      <td class="col-md-5"><%= image_tag(urank.image_url,:size => "32x32") %> <%= urank.nickname %></td>
      <td class="col-md-6"><h5><%= urank.point %></h5></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if !(session[:user_id].blank?) %>
<center><h3> あなたのランキング </h3></center>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-1">順位</th>
      <th class="col-md-5">ユーザー名</th>
      <th class="col-md-6">ポイント</th>
    </tr>
  </thead>
  <tbody>
    <!--同率だった場合はタイにする-->
    <% @your_rank.each do |yrank| %>
    <tr>
      <th scope="row" class="col-md-1"><h4><%= yrank.rank %>位</h4></th>
      <td class="col-md-5"><%= image_tag(yrank.image_url,:size => "32x32") %> <%= yrank.nickname %></td>
      <td class="col-md-6"><h5><%= yrank.point %></h5></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
