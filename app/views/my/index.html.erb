<%= render '/flash_msg2' %>
<div class="jumbotron icon_round">
  <center><h1><%= image_tag(@my.image_url, :size => "60x60") %><%= @my.nickname %>さんのページ</h1></center>
  <br>
  <center>
    <ul class="list-unstyled">
      <li style="font-size: 20px;">
        <%= @my.nickname %>さんのポイント：
        <span class="badge" style="font-size: 20px;"><%= @my.point %>pt</span>
      </li>
      <li style="font-size: 20px;">
        <%= @my.nickname %>さんのランキング：
        <span class="badge" style="font-size: 20px;"><%= @my.rank %>位</span>
      </li>
    </ul>
  </center>
</div>


<%= render partial: 'restaurants/not_crowd', locals: { rank: @my.restaurants, crowded_image: @crowded_image, how_crowded: @how_crowded } %>
<br>

<div class="contents">
  <div class="container"><h2 style="color: black;"><%= @my.nickname %>さんがいいねしたコメント</h2>
<!--
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-3">混雑度</th>
          <th class="col-md-5">店名</th>
          <th class="col-md-4">最新更新時</th>
        </tr>
        <tr>
          <th colspan="3" class="col-md-12">コメント</th>
        </tr>
      </thead>
    </table>
-->
  <% if @postit.present? %>
    <p align="right">[<%= link_to "全てのいいねしたコメントを見る", {:action => "my_log", :category => '0', :uid => @my.id } %>]</p>
    <%= render partial: '/mypage_card', locals: { comments_log: @postit.order("updated_at desc").limit(3), crowded_image: @crowded_image } %>
  <% end %>
  </div>
</div>
<br>


<div class="contents">
  <div class="container"><h2 style="color: black;"><%= @my.nickname %>さんの投稿コメント</h2>
<!--
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-3">混雑度</th>
          <th class="col-md-5">店名</th>
          <th class="col-md-4">最新更新時</th>
        </tr>
        <tr>
          <th colspan="3" class="col-md-12">コメント</th>
        </tr>
      </thead>
    </table>
-->
  <% if @mycomments.present? %>
    <p align="right">[<%= link_to "全ての投稿コメントを見る", {:action => "my_log", :category => '1', :uid => @my.id } %>]</p>
    <%= render partial: '/mypage_card', locals: { comments_log: @mycomments.order("updated_at desc").limit(3), crowded_image: @crowded_image } %>
  <% end %>
  </div>
</div>
