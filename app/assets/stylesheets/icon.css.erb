input[type="radio"] {
    -webkit-appearance: none;
    position: relative;
    display: inline-block;
    width: 85px;
    height: 85px;
}

input[type="radio"]:checked:before{
    content:"";
    position: absolute;
    display: inline-block;
    width: 85px;
    height: 85px;
    box-shadow: 0px 0px 0px 10px red;
}